            android:screenOrientation="locked" />
        <activity
            android:name=".HealthCentersActivity"
            android:label="@string/s_seznamZdomov"
            android:screenOrientation="locked" />
        <activity
            android:name=".LearnFirstAidBasicsActivity"
            android:label="@string/s_ucenjakPrvePomoci"
            android:screenOrientation="locked" />
